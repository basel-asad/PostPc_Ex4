<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/SuccessBanner"
        android:layout_width="241dp"
        android:layout_height="180dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="497dp"
        android:background="#9C27B0"
        android:gravity="center"
        android:text="Success!!!"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="358dp"
        android:layout_height="100dp"
        android:layout_marginTop="296dp"
        android:background="#9C27B0"
        android:gravity="left|center_vertical"
        android:text="time elapsed: "
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SuccessBanner"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/root1"
        android:layout_width="383dp"
        android:layout_height="85dp"
        android:layout_marginTop="36dp"
        android:background="#B02747"
        android:gravity="left|center_vertical"
        android:text="root1: "
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SuccessBanner" />

    <TextView
        android:id="@+id/root2"
        android:layout_width="375dp"
        android:layout_height="78dp"
        android:layout_marginTop="7dp"
        android:background="#B02732"
        android:gravity="left|center_vertical"
        android:text="root2: "
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/timeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/root1" />

</androidx.constraintlayout.widget.ConstraintLayout>